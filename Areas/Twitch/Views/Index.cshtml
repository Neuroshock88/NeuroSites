@model NeuroSites.Areas.Twitch.Default
@{
    NeuroSites.Areas.Twitch.Default NewModel = NeuroSites.Models.PagesModel.ActiveModel;
}
@if (NewModel != null)
{
    <div class="twitch" id="twitch">
        <div class="twitch__iframe-container">
            <!-- Add a placeholder for the Twitch embed -->
            <div id="twitch-embed"></div>
            <!-- Load the Twitch embed script -->
            <script src="https://player.twitch.tv/js/embed/v1.js"></script>
            <!-- Create a Twitch.Player object. This will render within the placeholder div -->
            <script type="text/javascript">
              new Twitch.Player("twitch-embed", {
                channel: "neuroshock88"
              });
            </script>
        </div>
        <div class="twitch__text-container">
            <div class="twitch__text-content">
                <a href="https://www.twitch.tv/neuroshock88" class="twitch__schedulelogo">
                    <img src="~/Content/Images/Logos/twitch_PNG48.png" class="twitch__logo">
                </a>
                <p>Streaming Schedule<br /></p>
                <p>Monday:         7:00 PM CST</p>
                <p>Tuesday:        7:00 PM CST</p>
                <p>Wednesday:    😭 no stream 😭</p>
                <p>Thursday:       Random</p>
                <p>Friday:         7:00 PM CST</p>
                <p>Saturday:       Random</p>
                <p>Sunday:       😭 no stream 😭</p>           
            </div>
        </div>
    </div>

}